<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.hidden_field :order_no %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id %>
  </div>
  <div class="field">
    <%= f.hidden_field :product_id %>
  </div>
  <div class="field">
    <%= f.hidden_field :os_id %>
  </div>
  <div>
    <%= f.label "价格：" %>
    <%= hidden_field_tag "single_price",@product.price %>
    <%= f.text_field :total_price,:class=>"total_price",:disabled=>"true", :value=>@product.price %>
  </div>
  <div>
    <%= f.label "购买数量：" %>
    <input id="decrease" class="cbtn orange" type="button" value="-">
    <%= f.text_field :amount,:value=>"1" %>
    <input id="increase" class="cbtn orange" type="button" value="+">
  </div>
  <div class="field">
    <%= f.hidden_field :ship_addr, :class=>"ship_addr" %>
  </div>
  <!--商品名称:<%= link_to @product.name, product_path(@product)%>-->
  <div class="actions">
    <%= f.submit "购买",:class=>"button orange hidden"%>
    <%= f.submit "申请试用", :class=>"button orange hidden"%>
  </div>
<% end %>
