<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "用户名" %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label "密码" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation,"确认密码" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label "手机号码" %><br />
    <%= f.text_field :phonenum %>
    <input id="sendSMS" type="button" value="发送验证短信"><br>
    <%= text_field  "auth","authCode",:size=>6%>
    <%= hidden_field "auth","hiddenAuthCode" %>
 </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "生日" %><br />
    <%= f.date_select :birthday,:start_year => 1920 %>
  </div>
  <div class="actions">
    <%= f.submit "创建"%>
  </div>
<% end %>
